{{ template "header" "Gemigit" }}

<h2>{{.Name}}</h2>
{{if .Description -}}<p>{{ .Description }}</p>{{end}}

<h3>Repositories</h3>

<ul>
{{ range .Repositories -}} 
<li>
<p><a href="/repo/{{$.Name}}/{{.Name}}">{{.Name}}</a></p>
{{if .Description -}}
<p>{{ .Description }}</p>
{{end -}}
</li>
{{ end -}}
</ul>
